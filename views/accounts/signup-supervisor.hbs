
<div class="container-fluid back_color already_account">
         <div class="container">      
             <div class="row">
				 {{#if message}}
                      <div class="alert alert-danger alert-dismissible fade show" role="alert">
                          <strong>Some Error</strong> {{ message}}
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                          </button>
                      </div>

                  {{/if}}
                 <div class="col-md-2">
                     
                 </div>
                 <div class="col-md-3 fluid_margin_padding">
                     
                         <div class="back1">
                             <h3>Synergy</h3>
                             <h2>Create Your Account</h2>
                             <p>Sign up for a free account to create fully managed cloud MongoDB databases.No credit card required.</p>
                         </div>
                 </div>
                 <div class="col-md-5 fluid_margin_padding">
                     <div class="back2">
                           <form method="post" action="/signup-supervisor">
						   	<div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="name" type="name" class="form-control" name="name" placeholder="Full name">
                              </div>
                              <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                <input id="email" type="text" class="form-control" name="email" placeholder="Email">
                              </div>
                              <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="name" type="name" class="form-control" name="username" placeholder="User name">
                              </div>
                              <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="password" type="password" class="form-control" name="password" placeholder="Password">
                              </div>
                             <div class="checkbox">
                                  <label><input type="checkbox" value="">I accept synergy <a>Master Services Agreement.</a></label>
                             </div>
                             <a href="trello.html" target="_blank"><button type="submit" class="btn btn-default">create account</button></a>  
                           </form>  
                     </div>
                 </div>
                 <div class="col-md-2">
                     
                 </div>   
             </div>
         </div>       
     </div>
